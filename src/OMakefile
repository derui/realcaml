.PHONY: lib install clean local_lib

.SUBDIRS: realcaml_contact realcaml_mesh realcaml_rigid_body realcaml_util realcaml_voronoi

################################################
# Configuration.  You may want to modify any of these configuration
# variables.
#

#
# This project requires ocamlfind (default - false).
#
USE_OCAMLFIND = true
#
OCAMLPACKS[] =
    core
    typedvec
#
if $(not $(OCAMLFIND_EXISTS))
   eprintln(This project requires ocamlfind, but is was not found.)
   eprintln(You need to install ocamlfind and run "omake --configure".)
   exit 1

#
# Include path
#
OCAMLINCLUDES += $(subdirs P, .)

#
# Compile native or byte code?
#
# The default values are defined as follows:
#
NATIVE_ENABLED = $(OCAMLOPT_EXISTS)
BYTE_ENABLED = true

#
# Various options
#
OCAMLFLAGS    += -annot -bin-annot -thread
OCAMLCFLAGS   += -g
OCAMLOPTFLAGS += -g
# OCAML_LINK_FLAGS +=
# OCAML_BYTE_LINK_FLAGS +=
# OCAML_NATIVE_LINK_FLAGS +=

################################################
# Build an OCaml library
#

LIBS[] =
    realcaml_util
    realcaml_mesh
    realcaml_rigid_body
    realcaml_voronoi
    realcaml_contact

FILES[] = $(removesuffix $(ls *ml))
#
MyOCamlPackage($(LIB), $(FILES), $(EMPTY), -linkall, true)

OUTPUT=$(OCamlPackageGeneratedFiles $(LIB), false)

local_lib:
    foreach(lib => ..., $(LIBS))
        LIBNAME=$(lib)/$(lib)_lib
        $(LIBNAME).cma $(LIBNAME).cmxa: $(lib)
        export
    export

lib: $(OUTPUT) local_lib

.DEFAULT: lib
