# The standard OMakefile.
# You will usually need to modify this file for your project.
open MyOCaml

# Get the library path converted from library name.
# Ex. NameToLibPath(util voronoi) --> src/util/realcaml_util src/voronoi/realcaml_voronoi
public.NameToLibPath(names) =
    LIBS =
    foreach(name => ..., $(array $(names)))
        LIBS += $(BIG_ROOT)/src/$(name)/realcaml_$(name)
        export
    return $(LIBS)

########################################################################
# Phony targets are scoped, so you probably want to declare them first.
#
NATIVE_ENABLED = $(OCAMLOPT_EXISTS)
BYTE_ENABLED = true

INSTALLED = $(BIG_ROOT)/installed

.PHONY: all install clean

########################################################################
# Subdirectories.
# You may want to include some subdirectories in this project.
# If so, define the subdirectory targets and uncomment this section.
#

LIB = realcaml

.SUBDIRS: src test

GENFILES = $(OCamlPackageGeneratedFiles $(LIB), false)

INSTALL_FILES = $(addprefix src/, $(GENFILES))
INSTALL_FILES += $(ls R, src/*mli)

.DEFAULT: all
